<?xml version="1.0" encoding="UTF-8"?>

<Defs>

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantSaguaroCactus</defName>
		<label>saguaro cactus</label>
		<description>A large cactus native to arid Earth environments.</description>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/SaguaroCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.3, 0.3, 0.3)</volume>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<selectable>true</selectable>
		<fillPercent>0.35</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<blockWind>true</blockWind>
		<ingestible>
			<nutrition>0.30</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>10</growDays>
			<sowMinSkill>4</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags> 
			<reproduceRadius>42</reproduceRadius>
			<leaflessGraphicPath>Things/Plant/SaguaroCactus_Leafless</leaflessGraphicPath>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>WoodLog_Saguaro</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>10</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<visualSizeRange>
				<min>1.3</min>
				<max>2.0</max>
			</visualSizeRange>
			<topWindExposure>0.08</topWindExposure>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="WoodLumberBase">
		<defName>LumberSaguaro</defName>
		<label>saguaro lumber</label>
		<description>Processed ribs from a saguaro cactus. Saguaro is soft and excellent for making tools, handicrafts, fences, and other small structures.</description>
		<graphicData>
			<color>(223,191,140)</color>
		</graphicData>
		<statBases>
			<Mass>0.2</Mass>
			<MarketValue>3.5</MarketValue>
			<DeteriorationRate>2</DeteriorationRate>
		</statBases>
		<stuffProps>
			<stuffAdjective>saguaro rib</stuffAdjective>
			<commonality>0.30</commonality>
			<color>(223,191,140)</color>
			<statFactors>
				<MaxHitPoints>0.2</MaxHitPoints>
				<Beauty>0.60</Beauty>
				<WorkToMake>0.3</WorkToMake>
				<WorkToBuild>0.3</WorkToBuild>
				<DoorOpenSpeed>0.8</DoorOpenSpeed>
			</statFactors>
		</stuffProps>
	</ThingDef> 
	
</Defs>