		<li>FueledStove</li>
	</recipeUsers>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
				</filter>
				<count>0.25</count>
			</li>
			<li>
				<filter>
					<categories>
