					</categories>
				</filter>
				<count>0.25</count>
			</li>
		</ingredients>
		<products>
      <MREFine>1</MREFine>
    </products>
		<fixedIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
      <disallowedSpecialFilters>
