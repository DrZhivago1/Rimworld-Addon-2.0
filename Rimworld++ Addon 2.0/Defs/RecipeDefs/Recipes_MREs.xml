<!-- Fine, 1x and 5x -->  
  
  <RecipeDef>
		<defName>CookMREFine</defName>
		<label>cook fine MRE</label>
		<description>Cooks a somewhat complex MRE from a combination of raw meat and raw plant ingredients, prepped and packaged for travel.</description>
